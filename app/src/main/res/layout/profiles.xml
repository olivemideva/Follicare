            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="118dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/logo_light" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profiles"
                android:fontFamily="@font/aguafina_script"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="40sp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:includeFontPadding="false"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:cardBackgroundColor="#edc6d9">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">
                    <ImageView
                        android:id="@+id/profile_image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/clearprofile"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/full_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Leila Nafula"
                        android:textSize="20sp"
                        android:layout_toRightOf="@+id/profile_image"
                        android:includeFontPadding="false"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="18dp"/>
                    <TextView
                        android:id="@+id/book"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Book"
                        android:textSize="20sp"
                        android:layout_toRightOf="@+id/full_name"
                        android:drawableLeft="@drawable/book_icon"
                        android:includeFontPadding="false"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="18dp"/>

                    <TextView
                        android:id="@+id/prof_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="leila@gmail.com"
                        android:textSize="20sp"
                        android:layout_toRightOf="@+id/profile_image"
                        android:includeFontPadding="false"
                        android:layout_below="@id/full_name"
                        android:layout_marginLeft="10dp"
                        />
                    <TextView
                        android:id="@+id/more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="More"
                        android:textSize="20sp"
                        android:layout_toRightOf="@+id/prof_email"
                        android:paddingTop="25dp"
                        android:drawableLeft="@drawable/more_icon"
                        android:includeFontPadding="false"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="18dp"/>
                    <TextView
                        android:id="@+id/prof_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0712345678"
                        android:textSize="20sp"
                        android:layout_toRightOf="@+id/profile_image"
                        android:includeFontPadding="false"
                        android:layout_below="@id/prof_email"
                        android:layout_marginLeft="10dp"
                        />
                    <TextView
                        android:id="@+id/rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rate"
                        android:textSize="20sp"
                        android:layout_toRightOf="@+id/prof_number"
                        android:paddingTop="50dp"
                        android:drawableLeft="@drawable/star_icon"
                        android:includeFontPadding="false"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="18dp"/>



                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>


